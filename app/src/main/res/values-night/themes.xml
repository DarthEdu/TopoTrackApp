<!-- res/values-night/themes.xml -->
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TopoTrackApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_light</item> <!-- Color de fondo -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item> <!-- Ícono central -->
        <item name="postSplashScreenTheme">@style/Theme.TopoTrackApp</item> <!-- Tema después del splash -->
    </style>

    <style name="Theme.TopoTrackApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/secondary_dark</item>
        <item name="colorSecondaryVariant">@color/secondary_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/dark_bg</item>
    </style>
</resources>
